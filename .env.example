# Appwrite Environment Variables Example

# IMPORTANT: Copy this file to .env and update the values below with your own secure values
# Never commit the .env file to version control as it contains sensitive information

# Domain Configuration
_APP_DOMAIN=localhost
_APP_DOMAIN_TARGET_CNAME=
_APP_DOMAIN_TARGET_AAAA=
_APP_DOMAIN_TARGET_A=
_APP_DOMAIN_FUNCTIONS=
_APP_DOMAIN_SITES=

# Database Configuration
_APP_DB_HOST=mariadb
_APP_DB_PORT=3306
_APP_DB_SCHEMA=appwrite
_APP_DB_USER=appwrite_user
_APP_DB_PASS=your_secure_database_password_here
_APP_DB_ROOT_PASS=your_secure_root_password_here

# Redis Configuration
_APP_REDIS_HOST=redis
_APP_REDIS_PORT=6379
_APP_REDIS_USER=
_APP_REDIS_PASS=your_secure_redis_password_here

# Security Configuration
# Generate a secure 32-character key with: openssl rand -base64 32
_APP_OPENSSL_KEY_V1=your_32_character_openssl_key_here

# System Email Configuration
_APP_SYSTEM_EMAIL_NAME=Appwrite
_APP_SYSTEM_EMAIL_ADDRESS=team@appwrite.io
_APP_EMAIL_SECURITY=1
_APP_SYSTEM_SECURITY_EMAIL_ADDRESS=security@appwrite.io

# SMTP Configuration (for sending emails)
_APP_SMTP_HOST=
_APP_SMTP_PORT=
_APP_SMTP_SECURE=
_APP_SMTP_USERNAME=
_APP_SMTP_PASSWORD=

# Storage Configuration
_APP_STORAGE_LIMIT=30000000
_APP_STORAGE_PREVIEW_LIMIT=20000000
_APP_STORAGE_ANTIVIRUS=disabled
_APP_STORAGE_DEVICE=local

# Compute Configuration
# Generate a secure secret for the executor service
_APP_EXECUTOR_SECRET=your_secure_executor_secret_here
_APP_EXECUTOR_HOST=http://openruntimes-executor:80
_APP_FUNCTIONS_TIMEOUT=900
_APP_SITES_TIMEOUT=900
_APP_COMPUTE_BUILD_TIMEOUT=900
_APP_COMPUTE_CPUS=1
_APP_COMPUTE_MEMORY=512
_APP_COMPUTE_SIZE_LIMIT=30

# Worker Configuration
_APP_WORKER_PER_CORE=6

# Usage Statistics
_APP_USAGE_STATS=1

# Logging Configuration
_APP_LOGGING_CONFIG=info

# Maintenance Configuration
_APP_MAINTENANCE_INTERVAL=86400
_APP_MAINTENANCE_DELAY=3600
_APP_MAINTENANCE_START_TIME=02:00
_APP_MAINTENANCE_RETENTION_EXECUTION=1209600
_APP_MAINTENANCE_RETENTION_CACHE=2592000
_APP_MAINTENANCE_RETENTION_ABUSE=86400
_APP_MAINTENANCE_RETENTION_AUDIT=1209600
_APP_MAINTENANCE_RETENTION_AUDIT_CONSOLE=86400
_APP_MAINTENANCE_RETENTION_USAGE_HOURLY=63072000
_APP_MAINTENANCE_RETENTION_SCHEDULES=43200

# SMS Configuration
_APP_SMS_PROVIDER=
_APP_SMS_FROM=

# VCS Configuration (for GitHub integration)
_APP_VCS_GITHUB_APP_NAME=
_APP_VCS_GITHUB_PRIVATE_KEY=
_APP_VCS_GITHUB_APP_ID=
_APP_VCS_GITHUB_WEBHOOK_SECRET=
_APP_VCS_GITHUB_CLIENT_SECRET=
_APP_VCS_GITHUB_CLIENT_ID=

# Docker Hub Configuration
_APP_DOCKER_HUB_USERNAME=
_APP_DOCKER_HUB_PASSWORD=

# Migration Configuration
_APP_MIGRATIONS_FIREBASE_CLIENT_ID=
_APP_MIGRATIONS_FIREBASE_CLIENT_SECRET=

# Assistant Configuration
_APP_ASSISTANT_OPENAI_API_KEY=

# GraphQL Configuration
_APP_GRAPHQL_MAX_BATCH_SIZE=10
_APP_GRAPHQL_MAX_COMPLEXITY=250
_APP_GRAPHQL_MAX_DEPTH=3

# Locale Configuration
_APP_LOCALE=en

# Response Format
_APP_SYSTEM_RESPONSE_FORMAT=json

# Options
_APP_OPTIONS_ABUSE=enabled
_APP_OPTIONS_ROUTER_PROTECTION=enabled
_APP_OPTIONS_FORCE_HTTPS=disabled
_APP_OPTIONS_ROUTER_FORCE_HTTPS=disabled

# Console Configuration
_APP_CONSOLE_WHITELIST_ROOT=enabled
_APP_CONSOLE_WHITELIST_EMAILS=
_APP_CONSOLE_SESSION_ALERTS=enabled
_APP_CONSOLE_WHITELIST_IPS=
_APP_CONSOLE_HOSTNAMES=